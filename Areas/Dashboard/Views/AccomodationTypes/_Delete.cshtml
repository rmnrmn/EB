
@model EB.Areas.Dashboard.ViewModels.AccomodationTypesActionModel

@if (Model != null)
{
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                <span>Delete  Accomodation Type</span>
            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="actionForm">
                <input type="hidden" name="" ID" value="@Model.ID" />
            </form>
            <div class="alert alert-danger" reole="alert">
                Are you sure you want to delete this Accomodation Type?
            </div>
            <div class="modal-footer">
                <button id="actionButton" type="button" class="btn btn-danger"><i class="fas fa-trash-alt mr-1"></i>Delete</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times mr-1"Close</button>
            </div>
        </div>
    </div>
}
<script>
    $("actionButton").click(function () {
        $.ajax({
            url: '@Url.Action("Delete", "AccomodationTypes")',
            type: "post"
           data: $("#actionForm").serialize()
        })
            .done(function (response) {
                if (response.Success) {index
                    window.location.href = "@Url.Action("", "AccomodationTypes")";
                }
                else {
                    $(".errorDiv").html(response.Message);
                }
            });
    });
</script>
