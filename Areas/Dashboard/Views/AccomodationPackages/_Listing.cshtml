
@model EB.Areas.Dashboard.ViewModels.AccomodationPackageListingModel

@if (Model != null && Model.AccomodationPackages != null && Model.AccomodationPackages.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">FeePerNight</th>
                <th scope="col">Accomodation Type</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var accomodationPackage in Model.AccomodationPackages)
            {
                <tr>
                    <td>
                        @accomodationPackage.Name
                    </td>
                    <td>
                        @accomodationPackage.FeePerNight
                    </td>
                    <td>
                        @if (accomodationPackage.AccomodationType != null)
                        {
                            @accomodationPackage.AccomodationType.Name
                        }
                    </td>
                    <td>
                        <button data-href="@Url.Action("Action", "AccomodationPackages", new { ID = accomodationPackage.ID })" type="button" class="data-btn btn btn-primary" data-toggle="modal" data-target="#actionModal"><i class="fas fa-pen mr-1>" Edit</button>
                        <button data-href="@Url.Action("Delete", "AccomodationPackages", new { ID = accomodationPackage.ID })" type="button" class="data-btn btn btn-primary" data-toggle="modal" data-target="#actionModal">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
